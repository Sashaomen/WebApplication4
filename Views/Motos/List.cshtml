 <h1>Все мотоциклы</h1>
    <h3>@Model.currCategory</h3>
    <div class="row mt-5 mb-2">
        @{ foreach (var moto in Model.allMotos)
            {
                <div class="col-lg-4">
                    <img class="img-thumbnail" src="@moto.img" alt="@moto.name" />
                    <h2>@moto.name</h2>
                    <p>@moto.shortDesc</p>
                    <p>Цена: @moto.price.ToString("c")</p>
                    <p><a class="btn btn-warning" href="#">Подробнее</a></p>
                </div>
            }
        }
    </div>
   
